TZ=
SWAGGER_ENABLE=true
FRONTEND_ORIGINS ="url"

# .env - production values (rename / edit secrets as needed)
NODE_ENV=
DOMAIN=
LETSENCRYPT_EMAIL=
PORT=
HOST=0.0.0.0

# Redis (compose service name 'redis')
REDIS_URL=redis://redis:6379
REDIS_CONNECT_TIMEOUT_MS=10000
REDIS_MAX_RETRIES=5
REDIS_MAX_RETRIES_PER_REQUEST=3

# Postgres init variables required by the postgres image
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
DATABASE_URL=

# JWT
JWT_SECRET=super-secret-change-me
JWT_EXPIRES_IN=


# Device JWT keys (paste base64 single-line from jwt_private.b64 / jwt_public.b64)
JWT_PRIVATE_KEY_B64=<paste-contents-of-jwt_private.b64-here>
JWT_PUBLIC_KEY_B64=<paste-contents-of-jwt_public.b64-here>

# Device token lifetime
DEVICE_JWT_EXPIRES_IN=

# Bcrypt rounds (dev)
BCRYPT_ROUNDS=

# Uploads (local storage)
UPLOAD_DIR=uploads
UPLOAD_SERVE_ROOT=/uploads
MAX_UPLOAD_BYTES=   # 20 MB

# Thumbnail settings
THUMBNAIL_WIDTH=400
THUMBNAIL_QUALITY=80

# sms
SMS_FROM=
SMS_USER=
SMS_PASSWORD=
